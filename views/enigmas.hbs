</nav>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 position-relative">
      <!-- Elementos decorativos -->
      <div class="decoration decoration-1">❓</div>
      <div class="decoration decoration-2">💡</div>
      <div class="decoration decoration-3">🔍</div>

      <div class="enigma-container">
        {{#if mensagem}}
          <h1 class="congrats-title">
            <span class="emoji">🎯</span>
            Desafio Concluído!
          </h1>

          <div class="congrats-message">
            Parabéns! Você completou o desafio com sucesso!<br />
            <span class="emoji">👏</span>
            Está pronto para o próximo nível?
          </div>

          <form action="{{this.proximo_nivel}}" method="get">
            <button class="next-level-btn" type="submit">
              <span class="emoji">🔥</span>
              {{texto_botao_proximo_nivel}}
            </button>
          </form>

          <form action="{{this.tentar_novamente}}" method="get">
            <button
              type="submit"
              class="next-level-btn"
              style="background-color: #ff9e7d; box-shadow: 0 4px 0 #e67e7d;"
            >
              <span class="emoji">🔄</span>
              Tentar Novamente
            </button>
          </form>
        {{else}}
          <h1 class="enigma-title">
            <span class="emoji">🧩</span>
            Desafio Cartoon
          </h1>

          <div class="enigma-question">
            {{this.enigma}}
          </div>

          <button id="verResposta" class="answer-btn">
            <span class="emoji">👀</span>
            Ver Resposta
          </button>

          <div id="resposta" class="enigma-answer">
            <strong>Resposta:</strong>
            {{this.resposta}}
            <div>
              <form action="{{this.proxima_rota}}" method="GET">
                <button type="submit" class="answer-btn mt-4">
                  <span>Próximo</span>
                </button>
              </form>
            </div>
          </div>

        {{/if}}

      </div>
    </div>
  </div>
</div>